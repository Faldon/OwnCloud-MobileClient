<Page
    x:Class="Nextcloud.View.CalendarPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Nextcloud.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    
    <Page.Resources>
        <Storyboard x:Name="SlideLeftBegin" Completed="SlideLeftBegin_OnCompleted">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Projection).(PlaneProjection.GlobalOffsetX)" Storyboard.TargetName="GrdMovingPart">
                <EasingDoubleKeyFrame KeyTime="0:0:0.0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.15" Value="-90"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="GrdMovingPart">
                <EasingDoubleKeyFrame KeyTime="0:0:0.0" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.15" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Name="SlideLeftEnd">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Projection).(PlaneProjection.GlobalOffsetX)" Storyboard.TargetName="GrdMovingPart">
                <EasingDoubleKeyFrame KeyTime="0:0:0.0" Value="90"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.15" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="GrdMovingPart">
                <EasingDoubleKeyFrame KeyTime="0:0:0.0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.15" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Name="SlideRightBegin" Completed="SlideRightBegin_OnCompleted">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Projection).(PlaneProjection.GlobalOffsetX)" Storyboard.TargetName="GrdMovingPart">
                <EasingDoubleKeyFrame KeyTime="0:0:0.0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.15" Value="90"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="GrdMovingPart">
                <EasingDoubleKeyFrame KeyTime="0:0:0.0" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.15" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Name="SlideRightEnd">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Projection).(PlaneProjection.GlobalOffsetX)" Storyboard.TargetName="GrdMovingPart">
                <EasingDoubleKeyFrame KeyTime="0:0:0.0" Value="-90"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.15" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="GrdMovingPart">
                <EasingDoubleKeyFrame KeyTime="0:0:0.0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.15" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Style x:Key="PhoneTextExtraSmallStyle" x:Name="PhoneTextExtraSmallStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource PhoneFontFamilyNormal}" />
            <Setter Property="Foreground" Value="{StaticResource PhoneForegroundBrush}" />
            <Setter Property="Margin" Value="12,0" />
            <Setter Property="FontSize" Value="16" />
        </Style>
        <Style x:Key="PhoneTextSmallStyle" x:Name="PhoneTextSmallStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource PhoneFontFamilyNormal}" />
            <Setter Property="Foreground" Value="{StaticResource PhoneForegroundBrush}" />
            <Setter Property="Margin" Value="12,0" />
            <Setter Property="FontSize" Value="18.667" />
        </Style>
        <DataTemplate x:Key="CalendarEventTemplate">
            <Grid x:Name="AppointmentGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock x:Name="Summary"
                           Text="{Binding Summary}"
                           Style="{StaticResource PhoneTextExtraSmallStyle}"
                           Margin="10,0,10,0"
                           Foreground="{Binding SummaryForeground}"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Grid.Column="1"
                           Grid.Row="0" />
                
                <TextBlock x:Name="Duration"
                           Text="{Binding Duration}"
                           Style="{StaticResource PhoneTextExtraSmallStyle}"
                           Margin="10,0,10,0"
                           Foreground="Gray"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Grid.Column="1"
                           Grid.Row="1" />
                <StackPanel Grid.Column="0"
                            Grid.Row="0"
                            Grid.RowSpan="{Binding RowSpan}" 
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Rectangle x:Name="FullDayEventIndicator"
                               Stroke="{Binding FullDayEventIndicatorStroke}"
                               Fill="{Binding FullDayEventIndicatorFill}"
                               StrokeThickness="1.0"
                               Width="10"
                               Height="30"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center" />
                    <TextBlock x:Name="StartTime"
                           Text="{Binding StartTime}"
                           Style="{StaticResource PhoneTextExtraSmallStyle}"
                           Margin="10,0,10,0"
                           Foreground="White"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top" />
                </StackPanel>
                
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid x:Name="LayoutRoot">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Panel -->
        <StackPanel Grid.Row="0" Margin="19,0,0,0">
            <TextBlock x:Uid="AppName"
                       Style="{ThemeResource TitleTextBlockStyle}" 
                       Margin="0,12,0,0"/>
            <TextBlock x:Name="CurrentYear" 
                       Text="" 
                       Style="{ThemeResource TitleTextBlockStyle}"
                       Margin="0,10,0,0" />
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="CurrentMonth"
                           Text=""
                           Style="{ThemeResource HeaderTextBlockStyle}"
                           Margin="0,0,10,5" />
                <TextBlock x:Name="NextMonth"
                           Text=""
                           Style="{ThemeResource HeaderTextBlockStyle}"
                           Margin="10,0,0,5" />
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1" x:Name="ContentRoot" Margin="19,-20,19,0"
              ManipulationStarted="ContentRoot_ManipulationStarted"
              ManipulationDelta="ContentRoot_ManipulationDelta"
              ManipulationMode="All" >
            <Grid x:Name="GrdCalendarLines" />
            <Grid x:Name="GrdMovingPart" >
                <Grid.Projection>
                    <PlaneProjection/>
                </Grid.Projection>

                <Grid x:Name="GrdDayIndicator"
                      Background="{ThemeResource PhoneAccentBrush}" />
                <Grid x:Name="GrdAppointments" />
                <StackPanel x:Name="DayDetails"
                            Background="Black"
                            VerticalAlignment="Top"
                            Visibility="Collapsed">
                    <TextBlock x:Name="DayDetailsHeader"
                               Margin="5,5,5,5"
                               Style="{StaticResource BaseTextBlockStyle}"
                               FontStretch="Condensed"
                               Text="" />
                    <ListView 
                        x:Name="DayAppointmentDetails"
                        Margin="10,0,0,10"
                        AutomationProperties.AutomationId="DayAppointmentList"
                        AutomationProperties.Name="List day appointments"
                        SelectionMode="None"
                        IsItemClickEnabled="False"
                        ItemTemplate="{StaticResource CalendarEventTemplate}"
                        ContinuumNavigationTransitionInfo.ExitElementContainer="True">
                    </ListView>
                    <!--<StackPanel x:Name="DayAppointmentDetails" Margin="10,0,0,10" />-->
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
